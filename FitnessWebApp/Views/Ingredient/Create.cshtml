@model Ingredient
@{
    ViewData["Title"] = "Ingredients";
}

<div class="d-flex justify-content-center">
    <div class="mw-50">
        <h1>Create</h1>
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="Name" class="control-label">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="mb-3 col-4">
                    <label asp-for="Unit" class="form-label">Unit</label>
                    <select class="form-select" id="unit" asp-for="Unit">
                        <option selected value="0">100g</option>
                        <option value="1">100ml</option>
                    </select>
                    <span asp-validation-for="Unit" class="text-danger"></span>
                </div>
                <div class="mb-3 col-4">
                    <label asp-for="Calories" class="form-label">Calories</label>
                    <input type="number" class="form-control" asp-for="Calories">
                    <span asp-validation-for="Calories" class="text-danger"></span>
                </div>
                <div class="mb-3 col-4">
                    <label asp-for="Protein" class="form-label">Protein</label>
                    <input type="number" class="form-control" asp-for="Protein" step="0.1">
                    <span asp-validation-for="Protein" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex justify-content-end gap-3 mt-4">
                <a class="btn btn-danger" asp-area="" asp-controller="Ingredient" asp-action="Create">Cancel</a>
                <button class="btn btn-success" type="submit">Create</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}